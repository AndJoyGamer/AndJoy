<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5.0dip" />

            <gradient
                android:angle="270.0"
                android:centerColor="#bbbbbc"
                android:centerY="0.75"
                android:endColor="#5C524F"
                android:startColor="#2E2826" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5.0dip" />

                <gradient
                    android:angle="270.0"
                    android:endColor="#1B76F5"
                    android:startColor="#8BB2E8" />
            </shape>
        </clip>
    </item>

</layer-list>